{
  "name": "storyteller",
  "version": "0.1.0",
  "description": "Rewrites PRs to make them easy to read - powered by gpt-5-codex",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "dev": "tsx watch src/cli/main.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"{src,test}/**/*.{ts,tsx,js,json,md}\" README.md ROADMAP.md PLAN.md",
    "format:check": "prettier --check \"{src,test}/**/*.{ts,tsx,js,json,md}\" README.md ROADMAP.md PLAN.md",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.1.0",
    "@octokit/plugin-paginate-rest": "^13.1.1",
    "@octokit/plugin-retry": "^8.0.1",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "@typescript-eslint/typescript-estree": "^8.44.1",
    "commander": "^14.0.1",
    "diff": "^8.0.2",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "semver": "^7.7.2",
    "toml": "^3.0.0",
    "yaml": "^2.8.1"
  }
}
